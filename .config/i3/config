# Controls for screen locking
set $mode_lock Locker: [n]ow [e]nable [d]isable

mode "$mode_lock" {
  bindsym e exec --no-startup-id xautolock -enable; mode "default"
  bindsym d exec --no-startup-id xautolock -disable; mode "default"
  bindsym n exec --no-startup-id xautolock -locknow; mode "default"

  bindsym Escape mode "default"
  bindsym Return mode "default"
}

# Controls for
set $mode_exit (l) lock, (mod+l) lock options, (e) logout, (s) suspend, (r) reboot, (q) shutdown
bindsym $mod+q mode "$mode_exit"

mode "$mode_exit" {
  bindsym l exec --no-startup-id xautolock -locknow; mode "default"
  bindsym $mod+l mode "$mode_lock"
  bindsym e exec i3-msg exit; mode "default"
  bindsym s exec --no-startup-id xautolock -locknow; exec --no-startup-id systemctl suspend; mode "default"
  bindsym r exec --no-startup-id systemctl reboot
  bindsym q exec --no-startup-id systemctl poweroff -i

  bindsym Escape mode "default"
  bindsym Return mode "default"
}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $mode_display Display Config: [w]ork [h]ome [s]ingle_screen

mode "$mode_display" {
        # These bindings trigger as soon as you enter the resize mode
        bindsym h exec --no-startup-id xrandr --output VIRTUAL1 --off --output eDP1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output DP1 --off --output HDMI2 --off --output HDMI1 --mode 1920x1080 --pos 1920x0 --rotate normal --output DP2 --off; exec --no-startup-id feh --bg-center ~/Pictures/wallpaper.jpg; mode "default"
        bindsym s exec --no-startup-id xrandr --output VIRTUAL1 --off --output eDP1 --mode 1920x1080 --pos 0x0 --rotate normal --output DP1 --off --output HDMI2 --off --output HDMI1 --off --output DP2 --off; exec --no-startup-id feh --bg-center ~/Pictures/wallpaper.jpg; mode "default"
        bindsym w exec --no-startup-id xrandr --output VIRTUAL1 --off --output eDP1 --mode 1920x1080 --pos 2560x0 --rotate normal --output DP1 --primary --mode 2560x1440 --pos 0x0 --rotate normal --output HDMI2 --off --output HDMI1 --off --output DP2 --off; exec --no-startup-id feh --bg-center ~/Pictures/wallpaper.jpg; mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+d mode "$mode_display"


