  separator_symbol "|"

  colors {
        background $color-bg-1
        statusline $color-mono-1
        separator  $color-mono-2

        focused_workspace  $color-bg $color-bg $color-blue
        active_workspace   $color-bg $color-bg $color-mono-2
        inactive_workspace $color-bg $color-bg $color-mono-2
        urgent_workspace   $color-bg $color-bg $color-mono-2
        binding_mode       $color-bg $color-bg $color-mono-2
    }
}
